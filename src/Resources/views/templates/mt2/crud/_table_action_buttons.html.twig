<div class="btn-group text-center">
    {% if is_granted(_call(entity, 'getPermission', 'edit'))%}
        <button
                class="btn btn-sm btn-clean btn-icon btn-icon-md edit-record-btn"
                data-toggle="tooltip"
                title="{{ 'app.edit' | trans }}"
                data-load-url="{{ path('crud_edit', {'id' : record.id,'entity':entity}) }}"
        >
            {% include '@CodyasToolbox/templates/mt2/icons/edit.html.twig' with {'extraClass' : 'svg-icon-3 svg-icon-muted'} %}
        </button>
    {% endif %}
    {% if is_granted(_call(entity, 'getPermission', 'remove'))%}
        <button class="btn btn-sm btn-clean btn-icon btn-icon-md remove-record-btn"
                data-toggle="tooltip"
                data-confirmation-msg-title="{{ 'app.remove_record_msg_title' | trans }}"
                data-confirmation-msg-desc="{{ 'app.remove_record_msg_desc' | trans }}"
                data-confirmation-msg-btn-cancel="{{ 'app.cancel' | trans }}"
                data-confirmation-msg-btn-ok="{{ 'app.ok' | trans }}"
                title="{{ 'app.delete' | trans }}"
                data-token="{{ csrf_token(constant('Codyas\\Toolbox\\Constants::CSRF_VALIDATION_CRUD_REMOVAL')) }}"
                data-action-url="{{ path('crud_remove', {'id' : record.id, 'entity':entity}) }}"
        >
            {% include '@CodyasToolbox/templates/mt2/icons/trash.html.twig' with {'extraClass' : 'svg-icon-3 svg-icon-danger'} %}
        </button>
    {% endif %}
</div>