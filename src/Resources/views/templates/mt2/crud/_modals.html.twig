<div class="modal fade modal-form">
    <div class="modal-dialog {{ modalWider is defined and modalWider ? 'modal-lg' : '' }}">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    {% include '@CodyasToolbox/templates/mt2/icons/edit.html.twig' with {'extraClass' : 'svg-icon-2'} %}
                    {{ label | trans({'%count%' : 1}) }} {{ 'Management' | trans | lower }}</h5>
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    {% include '@CodyasToolbox/templates/mt2/icons/close.html.twig' with {'extraClass' : 'svg-icon-2'} %}
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    <i class="fa fa-close"></i> {{ 'Cancel' | trans }}
                </button>
                <button type="button" class="btn btn-primary btn-flat btn-save">
                    <i class="fa fa-save"></i> {{ 'Save' | trans }}
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade modal-details" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-edit"></i> {{ label | trans({'%count%' : 1}) }} {{ 'Management' | trans | lower }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span></button>

            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    <i class="fa fa-close"></i> {{ 'Close' | trans }}
                </button>
            </div>
        </div>
    </div>
</div>

{% if filterForm is defined and filterForm is not empty %}
    <div class="modal fade modal-filter" >
        <div class="modal-dialog {{ modalWider is defined and modalWider ? 'modal-lg' : '' }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fa fa-edit"></i> {{ 'Filter' | trans  }} {{ label | trans({'%count%' : 2}) | lower }}
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    {% include _call(class, 'getFilterFormTemplate',[]) %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light btn-reset-filter" data-bs-dismiss="modal">
                        <i class="fas fa-close"></i> {{ 'Cancel' | trans }}
                    </button>
                    <button type="button" class="btn btn-primary btn-apply-filter">
                        <i class="fa fa-filter"></i> {{ 'Apply' | trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endif %}
